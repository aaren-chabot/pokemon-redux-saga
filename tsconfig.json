{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // "paths": { OPEN BUG - https://github.com/facebook/create-react-app/issues/9868
    //   "@env/*": ["environment/*"],
    //   "@app/*": ["app/*"],
    //   "@common/*": ["common/*"],
    //   "@modules/*": ["modules/*"],
    //   "@styles/*": ["styles/*"],
    // },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
